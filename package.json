{
  "name": "peacetrue-logger",
  "version": "0.1.2",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/peacetrue-logger.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "author": "peace",
  "website": "https://github.com/peacetrue/logger",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/peacetrue-logger.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/peacetrue-logger.cjs.development.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@size-limit/preset-small-lib": "^11.1.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "size-limit": "^11.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4"
  }
}
